<Page x:Class="HARS.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HARS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Enter Login Details or Else" Margin="0,60,0,980" HorizontalAlignment="Center"/>
        <Label x:Name="usernameLabel" Content="Username" Width="120" Margin="724,128,0,912" HorizontalAlignment="Left"/>
        <TextBox x:Name="usernameInput" TextWrapping="Wrap" Width="120" Margin="0,128,0,912" HorizontalAlignment="Center"/>
        <Label x:Name="passwordLabel" Content="Password" Width="120" Margin="724,200,0,840" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="passwordInput" Width="120" Margin="0,200,0,840" HorizontalAlignment="Center"/>
        <Button x:Name="loginButton" Content="Log In" Margin="900,282,900,764" Click="LoginButtonClick" IsDefault="True"/>
    </Grid>
</Page>
